<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Cines"
             x:Class="CursoIT.Xamarin.Views.CinemasPage">
    <ContentPage.Content>
        <ScrollView Padding="10">
            <StackLayout >
                <Frame Padding="10" BackgroundColor="{StaticResource ColorFrame}">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Column="0" Grid.Row="0" WidthRequest="80" Aspect="AspectFill" Grid.RowSpan="2" Source="http://www.arquitecturayconcreto.com/images/stories/virtuemart/product/trayectoria-puerta-del-norte-arquitectura-y-concreto7.jpg"/>
                        <Label Grid.Column="1" Grid.Row="0" 
                               Style="{StaticResource titleStyle}"
                               Text="Puerta del norte"/>
                        <Label Grid.Column="1" Grid.Row="1" FontSize="Small" LineBreakMode="MiddleTruncation" Text="El centro comercial del norte"/>
                    </Grid>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage> 