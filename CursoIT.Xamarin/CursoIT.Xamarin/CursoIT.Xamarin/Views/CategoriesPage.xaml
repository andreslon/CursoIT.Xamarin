<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Categorias" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursoIT.Xamarin.Views.CategoriesPage" 
             BackgroundColor="#f2f2f2">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="stkContent" Padding="20" >

                <Entry x:Name="NameTxt" Placeholder="Nombre" Text="{Binding Name}" />
                <Entry x:Name="DescriptionTxt" Placeholder="Descripción"/>
                <Button x:Name="myBtn" Text="Guardar" BackgroundColor="Red" TextColor="White" />
                <DatePicker></DatePicker>
                <Picker></Picker>
                <ProgressBar Progress="12" ></ProgressBar>
                <Slider></Slider>
                <Stepper></Stepper>
                <!--<WebView Source="https://urielalv.deviantart.com/art/Goku-Nueva-Transformacion-Dragon-Ball-Super-689776409"  HeightRequest="500" WidthRequest="300"></WebView>-->
                
                
                
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>